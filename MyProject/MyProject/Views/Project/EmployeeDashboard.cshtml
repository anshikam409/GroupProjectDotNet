﻿@model MyProject.Models.EmployeeLogin

@{ ViewBag.Title = "EmployeeDashboard"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            padding: 500px;
            color: #333;
            margin: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        h2 {
            color: #3498db;
        }

        .dashboard-container {
            width: 100%;
            max-width: 800px;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }

        .action-button {
            background-color: #3498db;
            color: #fff;
            padding: 15px 25px;
            font-size: 18px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .action-button:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>
    <h2>Welcome to the Employee Dashboard</h2>

    <div class="dashboard-container">

        <div class="action-buttons">
            <a href="@Url.Action("Addattendence", "Timesheets")" class="action-button">
                My Timesheet
            </a>

            <a href="@Url.Action("ApplyLeave", "Leave")" class="action-button">
                Apply for Leave
            </a>

            <a href="@Url.Action("PendingLeaveApproval", "Leave")" class="action-button">
                Pending Leave Approval
            </a>
            <a href="@Url.Action("LeaveSummary", "Leave")" class="action-button">
                Leave Summary
            </a>
        </div>
    </div>
</body>
</html>