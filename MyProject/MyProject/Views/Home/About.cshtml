@{
    ViewBag.Title = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #040D12;
            color: #93B1A6;
            padding: 0;
            margin: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
        }

        h2, h3 {
            color: #3498db;
        }

        p {
            line-height: 1.6;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

            ul li:before {
                content: "\2022";
                color: #3498db;
                display: inline-block;
                width: 1em;
                margin-left: -1em;
            }

        /* Additional Bootstrap styles */
        .lead {
            font-size: 1.25rem;
        }

        .mt-5 {
            margin-top: 3rem !important;
        }

        footer {
            background-color: #183D3D;
            color: #93B1A6;
            padding: 20px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .back-button {
            background-color: #5C8374;
            color: #93B1A6;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
        }

            .back-button:hover, .back-button:focus {
                background-color: #183D3D;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <h2>Welcome to My Project</h2>
                <p class="lead">Your Go-To Solution for Efficient Workforce Management</p>
                <p>My Project is a comprehensive attendance and leave management system designed to streamline and simplify workforce processes. We prioritize efficiency, accuracy, and user-friendly experiences for both employees and managers.</p>
            </div>
        </div>

        <!-- ... (rest of your content) ... -->

        <button class="back-button" onclick="window.location='@Url.Action("Index", "Project")'">Back to Home</button>
    </div>

    <footer>
        <p>© 2023 Infinite. All rights reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
