
@model MyProject.Models.ManagerLogin

@{
                ViewBag.Title = "SignUpManager";

}

<!DOCTYPE html>

<html lang="en">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>

        body {
            font-family: 'Arial', sans-serif;
            background-color: #040D12;
            color: #93B1A6;
            text-align: center;
            padding: 50px;
            margin: 0;
        }

        h2 {
            color: #3498db;
        }

        form {
            max-width: 300px;
            margin: 0 auto;
            background-color: #5C8374;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
            color: #fff;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
            background-color: #183D3D;
            color: #93B1A6;
            border: 1px solid #5C8374;
        }

        button {
            background-color: #3498db;
            color: #fff;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #2980b9;
            }

        .validation-summary-errors {
            color: #e74c3c;
        }

        .field-validation-error {
            color: #e74c3c;
        }

        .back-button {
            background-color: #183D3D;
            color: #93B1A6;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            position: absolute;
            top: 10px;
            right: 10px;
        }

            .back-button:hover, .back-button:focus {
                background-color: #5C8374;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            }
    </style>

</head>

<body>

    <a href="@Url.Action("Index", "Project")" class="back-button">Back</a>

    <h2>Manager Signup</h2>

    @using (Html.BeginForm("SignUpManager", "Project", FormMethod.Post, new { autocomplete = "off" }))

    {

        @Html.AntiForgeryToken()

                        <form>

                            <label for="ManagerID">ManagerID</label>

                            @Html.TextBoxFor(model => model.ManagerID, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.ManagerID, "", new { @class = "text-danger" })

                            <label for="Username">Username</label>

                            @Html.TextBoxFor(model => model.Name, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            <label for="Email">Email</label>

                            @Html.TextBoxFor(model => model.Email, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            <label for="Phone">Phone</label>

                            @Html.TextBoxFor(model => model.Phone, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                            <label for="Status">Status</label>

                            @Html.TextBoxFor(model => model.Status, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                            <label for="Grade">Grade</label>

                            @Html.TextBoxFor(model => model.Grade, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })

                            <label for="Designation">Designation</label>

                            @Html.TextBoxFor(model => model.Designation, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })

                            <label for="Password">Password</label>

                            @Html.PasswordFor(model => model.Password, new { autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                            <button type="submit">Sign Up</button>

                        </form>
                                    }

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
