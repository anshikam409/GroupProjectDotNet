@model MyProject.Models.EmployeeDetails

@{
    ViewBag.Title = "Employee Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #040D12;
            margin: 0;
            height: 120vh; /* Increased height to 120vh */
            color: #93B1A6;
        }

        .dashboard-container {
            width: 100%;
            max-width: 800px;
            background-color: #183D3D;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            overflow: hidden;
            margin: auto;
        }

        h2 {
            color: #5C8374;
        }

        p {
            font-size: 20px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            color: #fff;
        }

            table th, table td {
                padding: 10px;
                border-bottom: 1px solid #5C8374;
            }

        .action-buttons {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .action-button {
            background-color: #5C8374;
            color: #fff;
            padding: 15px 25px;
            font-size: 18px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

            .action-button:hover {
                background-color: #183D3D;
            }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #040D12;
            color: #93B1A6;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <h2>Welcome, @Model.Employeename</h2>
        <table>
            <tr>
                <th>Employee ID</th>
                <td>@Model.EmpID</td>
            </tr>
            <tr>
                <th>Employee Grade</th>
                <td>@Model.Grade</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>@Model.Designation</td>
            </tr>
        </table>

        <div class="action-buttons">
            <a href="@Url.Action("Addattendence","Timesheets")" class="action-button">My Timesheet</a>
            <a href="@Url.Action("ApplyLeave", "Leave")" class="action-button">Apply for Leave</a>
            <a href="@Url.Action("Index", "Project")" class="action-button">Logout</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
