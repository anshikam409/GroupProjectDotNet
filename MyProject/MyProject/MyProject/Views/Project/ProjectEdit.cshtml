@model MyProject.Models.ProjectDetails

@{
    ViewBag.Title = "ProjectEdit";
}

<style>
    body {
        background-color: #040D12; /* Dark background color */
        color: #93B1A6; /* Light text color */
        padding: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; /* Start from the top */
        min-height: 100vh;
    }

    h2 {
        color: #5C8374; /* Greenish text color */
        font-size: 3em; /* Larger font size */
        margin-bottom: 20px;
    }

    .form-horizontal {
        background-color: #040D12; /* Dark background color for the form */
        color: #93B1A6; /* Light text color */
        border: 1px solid #183D3D; /* Border color */
        border-radius: 8px;
        padding: 30px;
        margin-top: 20px;
        width: 60%;
    }

    .control-label {
        color: #93B1A6; /* Light label text color */
    }

    .form-control {
        background-color: #040D12; /* Dark form input background color */
        color: #93B1A6; /* Light form input text color */
        border: 1px solid #183D3D; /* Border color */
    }

    .btn-default {
        background-color: #5C8374; /* Greenish button color */
        color: #183D3D; /* Dark button text color */
        border: 1px solid #93B1A6; /* Border color */
    }

        .btn-default:hover {
            background-color: #93B1A6; /* Lighter hover color */
            color: #183D3D; /* Dark button text color on hover */
        }

    .text-danger {
        color: #FF6363; /* Red error text color */
    }

    .back-to-list {
        margin-top: 20px;
        color: #5C8374; /* Greenish text color for back-to-list link */
    }

        .back-to-list:hover {
            color: #93B1A6; /* Lighter color on hover */
        }
</style>

<h2>ProjectEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProjectDetails</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProjectID)

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ProjectIndex", null, new { @class = "back-to-list" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
