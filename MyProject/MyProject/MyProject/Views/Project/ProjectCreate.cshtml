@model MyProject.Models.ProjectDetails

@{
    ViewBag.Title = "ProjectCreate";
}

<style>
    body {
        background-color: #040D12; /* Retaining the old background color */
        color: #93B1A6; /* Retaining the old text color */
        padding: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; /* Start from the top */
        min-height: 100vh;
    }

    h2 {
        color: #5C8374;
        font-size: 3em; /* Increased font size */
        margin-bottom: 20px;
    }

    .form-horizontal {
        background-color: #040D12; /* Retaining the old background color */
        color: #93B1A6; /* Retaining the old text color */
        padding: 40px; /* Increased padding for the larger form size */
        border: 1px solid #183D3D;
        border-radius: 8px;
        margin-top: 20px;
        width: 60%;
    }

    .control-label {
        color: #93B1A6; /* Retaining the old text color */
        font-size: 1.2em; /* Increased font size for the labels */
    }

    .form-control {
        background-color: #040D12; /* Retaining the old background color */
        color: #93B1A6; /* Retaining the old text color */
        border: 1px solid #183D3D;
        font-size: 1.2em; /* Increased font size for the input fields */
    }

    .btn-default {
        background-color: #183D3D;
        color: #93B1A6;
        border: 1px solid #5C8374;
        font-size: 1.2em; /* Increased font size for the button */
    }

        .btn-default:hover {
            background-color: #5C8374;
            color: #040D12;
        }

    .text-danger {
        color: #FF6363;
    }

    .back-to-list {
        margin-top: 20px;
        color: #5C8374;
        font-size: 1.2em; /* Increased font size for the link */
    }

        .back-to-list:hover {
            color: #93B1A6;
        }
</style>

<h2>ProjectCreate</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProjectDetails</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ProjectIndex", null, new { @class = "back-to-list" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
