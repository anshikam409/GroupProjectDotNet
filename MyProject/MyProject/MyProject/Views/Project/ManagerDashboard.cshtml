@model MyProject.Models.ManagerLogin

@{
    ViewBag.Title = "ManagerDashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #040D12;
            color: #93B1A6;
            text-align: center;
            padding: 50px;
            margin: 0;
        }

        h2, h3 {
            color: #5C8374;
        }

        .jumbotron {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('path_to_your_image.jpg');
            color: #fff;
            background-size: cover;
            padding: 20px;
            margin: 20px 0;
            text-align: center;
        }

        .dashboard-container {
            display: flex;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            background-color: #183D3D;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .employee-details {
            width: 30%;
            text-align: left;
        }

        table {
            width: 100%;
            color: #fff;
            margin-top: 20px;
        }

            table th, table td {
                padding: 10px;
                border-bottom: 1px solid #5C8374;
            }

        .nav-bar {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            margin-bottom: 20px;
        }

        .logout-button {
            background-color: #183D3D;
            color: #93B1A6;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 10px;
        }

            .logout-button:hover {
                background-color: #5C8374;
            }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-top: 20px;
        }

        .action-button {
            flex: 1;
            background-color: #5C8374;
            color: #fff;
            padding: 20px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            margin-right: 10px;
            text-align: center;
        }

            .action-button:last-child {
                margin-right: 0;
            }

            .action-button:hover {
                background-color: #183D3D;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="nav-bar">
            <a href="@Url.Action("Index", "Project")" class="logout-button">Logout</a>
        </div>

        <div class="jumbotron">
            <h2 class="display-4">Manager Portal, @Model.Name!</h2>
            <div class="employee-details">
                <table>
                    <tr>
                        <th>ID</th>
                        <td>@Model.ManagerID</td>
                    </tr>
                    <tr>
                        <th>Designation</th>
                        <td>@Model.Designation</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>@Model.Status</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>Grade</th>
                        <td>@Model.Grade</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="dashboard-container">
            <div class="action-buttons">
                <a href="@Url.Action("Addattendence", "Manager")" class="action-button">My Timesheet</a>
                <a href="@Url.Action("Index", "Timesheets")" class="action-button">My Team Timesheet</a>
                <a href="@Url.Action("ManagerApplyLeave", "ManagerLeave")" class="action-button">My Leaves</a>
                <a href="@Url.Action("PendingLeaveApproval","Leave")" class="action-button">My Team Leaves</a>
                <a href="@Url.Action("EmployeeIndex", "Project")" class="action-button">Employee Details</a>
                <a href="@Url.Action("ProjectIndex", "Project")" class="action-button">Project Details</a>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
