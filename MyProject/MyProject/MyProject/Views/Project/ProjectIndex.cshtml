@model IEnumerable<MyProject.Models.ProjectDetails>

@{
    ViewBag.Title = "ProjectIndex";
}

<style>
    body {
        background-color: #040D12;
        color: #93B1A6;
        padding: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
    }

    h2 {
        color: #5C8374;
        font-size: 3.5em;
        margin-bottom: 20px;
    }

    .table {
        width: 70%;
        margin-top: 20px;
        background-color: #040D12;
        color: #93B1A6;
        border: 1px solid #183D3D;
        border-radius: 8px;
    }

    th {
        background-color: #183D3D;
        color: #5C8374;
        text-align: center;
        font-size: 1.5em; /* Adjusted font size for table headers */
    }

    td {
        text-align: center;
        font-size: 1.2em; /* Adjusted font size for table cells */
    }

    a {
        color: #93B1A6;
        margin: 0 5px;
        font-size: 1.2em; /* Adjusted font size for links */
    }

        a:hover {
            color: #5C8374;
        }
</style>

<h2>ProjectIndex</h2>

<p>
    @Html.ActionLink("Create New", "ProjectCreate")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.ActionLink("Edit", "ProjectEdit", new { id = item.ProjectID }) |
                @Html.ActionLink("Details", "ProjectDisplay", new { id = item.ProjectID }) |
                @Html.ActionLink("Delete", "ProjectDelete", new { id = item.ProjectID })
            </td>
        </tr>
    }

</table>
