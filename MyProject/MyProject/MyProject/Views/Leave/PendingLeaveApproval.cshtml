@model IEnumerable<MyProject.Models.EmployeeLeaveRequest>

@{
    ViewBag.Title = "Pending Leave Approval";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

<style>
    body {
        padding: 20px;
        background-color: #040D12; /* Dark background color */
        font-family: 'Arial', sans-serif;
        color: #93B1A6; /* Light text color */
    }

    h2 {
        margin-bottom: 20px;
        color: #5C8374; /* Dark green text color */
        text-align: center;
    }

    .table th,
    .table td {
        text-align: center;
        color: #5C8374; /* Dark green text color */
    }

    .thead-dark th {
        background-color: #183D3D; /* Dark green background for table header */
    }

    .table-bordered,
    .table-bordered th,
    .table-bordered td {
        border-color: #183D3D; /* Dark green border color for table */
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #040D12; /* Dark background for odd rows */
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
    }

    .btn-pending {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-accept {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-reject {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    /* Disable autocomplete styles */
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px #040D12 inset !important;
        font-size: 16px; /* Adjust font size */
    }
</style>

<h2>Pending Leave Approval</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Leave Type</th>
                <th>From Date</th>
                <th>To Date</th>
                <th>Days of Leave</th>
                <th>Reason</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var leaveRequest in Model)
            {
                <tr>
                    <td>@leaveRequest.LeaveType</td>
                    <td>@leaveRequest.FromDate.ToShortDateString()</td>
                    <td>@leaveRequest.ToDate.ToShortDateString()</td>
                    <td>@leaveRequest.DaysOfLeave</td>
                    <td>@leaveRequest.Reason</td>
                    <td>
                        <div class="btn-container">
                            <a href="@Url.Action("acceptleave", "Leave", new { leaveRequestId = leaveRequest.Id })" class="btn btn-success btn-lg action-button" target="_blank">
                                Accept
                            </a>
                            @Html.ActionLink("Reject", "RejectLeave", new { leaveRequestId = leaveRequest.Id }, new { @class = "btn btn-reject" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="@Url.Action("YourPreviousAction", "YourController")" class="btn btn-primary btn-lg action-button">
    Back
</a>
